<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.settlers.hd"
    android:installLocation="auto"
    android:versionCode="16"
    android:versionName="2.0.1" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name="com.catandroid.app.CatAndroidApp"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:allowBackup="true" >
        <activity
            android:name="com.catandroid.app.Main"
            android:configChanges="locale"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Holo" >
            <intent-filter>
                <action
                    android:name="android.intent.action.MAIN"
                    android:launchMode="standard"
                    android:screenOrientation="portrait" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.catandroid.app.common.controllers.GameSetup"
            android:label="@string/app_name"
            android:launchMode="standard"
            android:theme="@android:style/Theme.Holo.Dialog" >
        </activity>
        <activity
            android:name="com.catandroid.app.common.ui.activities.CostsReference"
            android:label="@string/app_name"
            android:launchMode="standard"
            android:theme="@android:style/Theme.Holo.Dialog" >
        </activity>
        <activity
            android:name="com.catandroid.app.common.ui.activities.PlayerStatus"
            android:label="@string/app_name"
            android:launchMode="standard"
            android:theme="@android:style/Theme.Holo.Dialog" >
        </activity>
        <activity
            android:name="com.catandroid.app.common.controllers.actions.Discard"
            android:label="@string/app_name"
            android:launchMode="standard"
            android:theme="@android:style/Theme.Holo.Dialog" >
        </activity>
        <activity
            android:name="com.catandroid.app.common.logistics.Stats"
            android:label="@string/app_name"
            android:launchMode="standard"
            android:theme="@android:style/Theme.Holo.Dialog" >
        </activity>
        <activity
            android:name="com.catandroid.app.common.controllers.GameManager"
            android:label="@string/app_name"
            android:launchMode="standard"
            android:theme="@android:style/Theme.Holo" >
        </activity>
        <activity
            android:name="com.catandroid.app.common.logistics.Rules"
            android:label="@string/app_name"
            android:launchMode="standard"
            android:theme="@android:style/Theme.Holo" >
        </activity>
        <activity
            android:name="com.catandroid.app.common.controllers.actions.trade.PlayerTrade"
            android:label="@string/app_name"
            android:launchMode="standard"
            android:theme="@android:style/Theme.Holo.Dialog" >
        </activity>
        <activity
            android:name="com.catandroid.app.common.controllers.actions.trade.AcceptTrade"
            android:label="@string/app_name"
            android:launchMode="standard"
            android:theme="@android:style/Theme.Holo.Dialog" >
        </activity>
        <activity
            android:name="com.catandroid.app.common.controllers.actions.trade.CounterOffer"
            android:label="@string/app_name"
            android:launchMode="standard"
            android:theme="@android:style/Theme.Holo.Dialog" >
        </activity>
    </application>

</manifest>